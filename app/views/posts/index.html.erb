<div class="aside">
<h3>Pending invitations:</h3><br>
<%= render 'received_invites', received_invites: @received_invites %><br>
<%= render 'sent_invites' %>
</div>

<%= form_for(@post) do |form| %>
<%= form.label :content %>
<%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
<%= display_errors(@post) %>
<%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
<h3>
  Recent posts
</h3>
<ul class="posts">
  <%= render @timeline_posts %>
</ul>
</article>
