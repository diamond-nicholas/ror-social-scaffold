    <%= form_for @post do |f| %>
    <%= f.label :description, 'Description' %>
    <%= f.text_area :description, class: 'form-control' %>
    <%= f.label :image, "Image" %>
    <%= f.file_field :image, class: 'form-control' %> 
    <%= f.submit "Create", class: "btn btn-primary mt-2" %>
    <% end %>